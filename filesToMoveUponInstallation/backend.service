[Unit]
Description=Gunicorn instance to serve webcomic backend
After=network.target

[Service]
User=bitnami
Group=www-data
Restart=on-failure
Environment="PATH=/home/bitnami/webcomic-backend/venv/bin"
WorkingDirectory=/home/bitnami/webcomic-backend/
ExecStart=sudo bash start-server.sh

[Install]
WantedBy=multi-user.target